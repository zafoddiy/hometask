<?xml version="1.0"?>
<robot name="differential_robot">

  <material name="blue">
    <color rgba="0 0 0.8 1"/>
  </material>
  <material name="black">
    <color rgba="0 0 0 1"/>
  </material>
  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>

  <link name="base_link">
    <visual>
      <origin xyz="0 0 0.036" rpy="0 0 0" />
      <geometry>
        <cylinder length="0.03" radius="0.350"/>
      </geometry>
    </visual>
  </link>

  <link name="left_wheel">
    <visual>
      <geometry>
        <cylinder length="0.03" radius="0.036"/>
      </geometry>
      <origin rpy="1.57075 1.57075 0" xyz="0 0 0"/>
      <material name="black"/>
    </visual>
  </link>

  <joint name="base_to_left_wheel" type="continuous">
    <axis xyz="0 0 1"/>
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="0 0.350 0.036"/>
  </joint>

  <link name="right_wheel">
    <visual>
      <geometry>
        <cylinder length="0.030" radius="0.036"/>
      </geometry>
      <origin rpy="-1.57075 -1.57075 0" xyz="0 0 0"/>
      <material name="black"/>
    </visual>
  </link>

  <joint name="base_to_right_wheel" type="continuous">
    <axis xyz="0 0 -1"/>
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="0 -0.350 0.036"/>
  </joint>
  
  <link name="head">
    <visual>
      <geometry>
        <box size="0.030 0.030 0.030"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <material name="blue"/>
    </visual>
  </link>
  
  <joint name="base_to_head" type="fixed">
    <parent link="base_link"/>
    <child link="head"/>
    <origin xyz="0.125 0 0.066"/>
  </joint>
</robot>
